{% extends "ERCantineBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Aujourdhui{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">

            <section class="content">
                <h1>Aujourdhui</h1>
                </br>
                <a href="#" class="btn btn-default">Nombre de repas validé: </a>   
                </br></br>
                <a href="#" class="btn btn-default">Nombre de repas prévus: {{countrepas}}</a>

        </div>
        <br><br><br>
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="table-container">
                        <table class="table table-filter">
                            <tbody>
                            <td>
                                <div class="media">
                                    <a href="#" class="pull-left">
                                    </a>
                                    <div class="media-body">
                                        {% for user in utilisateur%}
                                            <h4 class="title"></h4>
                                                <span class="name">
                                                    {{user.nom}}
                                                </span>
                                                <a href="{{path('cantine_addrepas')}}?utilisateur={{user.id}}" class="btn btn-warning btn-filter">Mange</a>
                                                <a href ="{{path('cantine_cancelrepas')}}?utilisateur={{user.id}}" class="btn btn-danger btn-filter">Annuler</a>
                                                <a href="{{path('cantine_validrepas')}}?utilisateur={{user.id}}" class="btn btn-success btn-filter">Valider</a>
                                            {% endfor %}  
                                        </div>        
                                    </div>

                                </td>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="content-footer">
                </div>
            </div>

        </section>

    </div>
</div>              
{% endblock %}